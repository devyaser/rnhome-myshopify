{% comment %} <div class="new-page-contact">
<div class="grid">
  <div class="grid__item large--five-sixths push--large--one-twelfth">
<!-- 
    <header class="section-header text-center">
      <h1>{{ page.title }}</h1>
      <hr class="hr--small">
    </header> -->

    <div class="grid">
      <div class="grid__item large--four-fifths push--large--one-tenth">
        <div class="rte rte--nomargin rte--indented-images">
          {{ page.content }}
        </div>

        <div class="form-vertical">
          {% form 'contact' %}

            {% comment %}
              Successful message
            {% endcomment %}
            {% if form.posted_successfully? %}
              <p class="note form-success">
                {{ 'contact.form.post_success' | t }}
              </p>
            {% endif %}

            {{ form.errors | default_errors }}

            <div class="grid grid--small">
              <div class="grid__item large--one-half">
                <label for="ContactFormName" class="hidden-label">{{ 'contact.form.name' | t }}</label>
                <input type="text" id="ContactFormName" class="input-full" name="contact[{{ 'contact.form.name' | t }}]" placeholder="{{ 'contact.form.name' | t }}" autocapitalize="words" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}">
              </div>

              <div class="grid__item large--one-half">
                <label for="ContactFormEmail" class="hidden-label">{{ 'contact.form.email' | t }}</label>
                <input type="email" id="ContactFormEmail" class="input-full" name="contact[email]" placeholder="{{ 'contact.form.email' | t }}" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
              </div>
            </div>

             <div class="grid grid--small">
              <div class="grid__item large--one-half">
            <label for="ContactFormPhone" class="hidden-label">{{ 'contact.form.phone' | t }}</label>
            <input type="tel" id="ContactFormPhone" class="input-full" name="contact[{{ 'contact.form.phone' | t }}]" placeholder="{{ 'contact.form.phone' | t }}" pattern="[0-9\-]*" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}">
              </div>

              <div class="grid__item large--one-half">
                <input type="date" id="dob" class="input-full" name="dob" placeholder="Desired start date"required>
              </div>
            </div>
                  <div class="text-filed">
               <input type="text" id="username" name="username" placeholder="Budget" required>
                  </div>
            
                <label for="ContactFormMessage" class="hidden-label">{{ 'contact.form.message' | t }}</label>
                <textarea rows="10" id="ContactFormMessage" class="input-full" name="contact[{{ 'contact.form.message' | t }}]" placeholder="Tell us a little bit more about your project and vision (note: we primarily focus on full-service remodels and new builds — however, we would still love to hear from you if your project doesn’t fit that description) ">{% if form.body %}{{ form.body }}{% endif %}</textarea>
            
            <label for="ContactFormMessage" class="hidden-label">{{ 'contact.form.message' | t }}</label>
            <textarea rows="10" id="ContactFormMessage" class="input-full" name="contact[{{ 'contact.form.message' | t }}]" placeholder="Anything else you’d like us to know?">{% if form.body %}{{ form.body }}{% endif %}</textarea>
              <div class="buttons-sub">
            <input type="submit" class="btn right" value="Submit">
                 </div>
          {% endform %}
        </div>
      </div>
    </div>

  </div>
</div>
</div>
 {% endcomment %}