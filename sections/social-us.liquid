  {
    "name": "social-us",
    "settings": [
      {
        "type" : "text",
        "id" : "title1",
        "label" : "Heading"
      }
        
    ],
    "blocks" : [
      {
        "type" : "image_picker",
        "name" : "Add Image",
        "settings": [
          {
            "type" : "image_picker",
            "id" : "image",
            "label" : "Image"
          }
        ]
      }
    ],
    "presets" : [
      {
        "name" : "social-us"
      }
    ]
  }
