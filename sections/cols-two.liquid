
<div class="section-cols-two">
    <div class="wrapper">
    <h2>{{ section.settings.title }}</h2> 
      <h3>{{ section.settings.title1 }}</h3> 
    
  

         <div class="main-cols-two">
                {% for block in section.blocks %}
                          <div class="flex">
             <div class="design-cols-two">           
               <img src="{{ block.settings.image | img_url: 'master' }}" >
               </div>
                <div class="design-cols-two-img">           
               <img src="{{ block.settings.image2 | img_url: 'master' }}" >
               </div>
                 <div class="text-cols-two">  
                 {{ block.settings.buy-text2 }} 
                       </div> 
                   </div>
             {% endfor %}


  </div>
</div>
 </div>


{% schema %}
  {
    "name": "cols-two",
    "settings": [
      {
        "type" : "text",
        "id" : "title",
        "label" : "Heading"
      },
       {
        "type" : "text",
        "id" : "title1",
        "label" : "Heading_two"
      }
        
    ],
    "blocks" : [
      {
        "type" : "image_picker",
        "name" : "Image",
        "settings": [
      {
            "type" : "image_picker",
            "id" : "image",
            "label" : "Image"
          },
             {
            "type" : "image_picker",
            "id" : "image2",
            "label" : "Image2"
          },
           {
        "type" : "richtext",
        "id" : "buy-text2",
        "label" : "Hover_text"
      }
        ]
      }
    ],
    "presets" : [
      {
        "name" : "cols-two"
      }
    ]
  }
{% endschema %}